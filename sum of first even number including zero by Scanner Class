package tesr.java;
import java.util.Scanner;
public class Main {    // sum of first even number including zero by Scanner Class
	public static void main(String[] args) {
		System.out.println("Write the number here to know the sum of first even number including zero");
		
		Scanner sc = new Scanner(System.in);
		int n= sc.nextInt();
		int sum = n*(n-1);
		System.out.println(sum + "   is the sum");
	}
}
